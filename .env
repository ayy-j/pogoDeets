# Core application configuration
NODE_ENV=production
API_HOST=0.0.0.0
API_PORT=3000

# Database connection
# For Docker Compose: use DB_PASSWORD. For production: use DB_PASSWORD_FILE.
DB_HOST=postgres
DB_PORT=5432
DB_NAME=pogodeets
DB_USER=postgres
DB_PASSWORD=password.txt
DB_PASSWORD_FILE=
# Optionally provide a full connection string if desired
DATABASE_URL=

# Scheduler configuration
ENABLE_SCHEDULER=true
SCRAPE_SCHEDULE=0 */4 * * *
RUN_INITIAL_SCRAPE=false

# Pipeline toggles
ENABLE_LEGACY_JSON_EXPORT=false
ENABLE_MIGRATIONS=true
